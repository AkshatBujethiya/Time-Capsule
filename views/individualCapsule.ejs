<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= capsule.capsuleName %></title>
</head>
<body>
    <h1><%= capsule.capsuleName %></h1>
    <p><%= capsule.capsuleDescription %></p>
    <h2>Files</h2>
    <ul>
        <% capsule.files.forEach(function(file) { %>
            <li>
                <a href="<%= file.fileUrl %>" target="_blank"><%= file.fileName %></a>
            </li>
        <% }); %>
    </ul>
    <p>Unlock Date: <%= new Date(capsule.unlockDate).toLocaleString() %></p>
    <p>Created At: <%= new Date(capsule.createdAt).toLocaleString() %></p>
</body>
</html>
