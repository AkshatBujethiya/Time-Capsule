<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Capsules</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script>
        function startCountdown(unlockDate, elementId) {
            const countDownDate = new Date(unlockDate).getTime();
            const countdownElement = document.getElementById(elementId);

            const updateCountdown = setInterval(function() {
                const now = new Date().getTime();
                const distance = countDownDate - now;

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                countdownElement.innerHTML = `${days}d ${hours}h ${minutes}m ${seconds}s`;

                if (distance < 0) {
                    clearInterval(updateCountdown);
                    countdownElement.innerHTML = "Unlocked";
                }
            }, 1000);
        }
    </script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <h1 class="text-4xl font-bold text-center mb-8"><%= user.name %>'s Capsules</h1>
        
        <h2 class="text-3xl font-semibold mb-4">Unlocked Capsules</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mb-8">
            <% unlockedCapsules.forEach(function(capsule, index) { %>
                <div class="bg-white rounded-lg shadow-md p-6 cursor-pointer transform transition duration-300 hover:scale-105" onclick="location.href='/capsule/<%= capsule.id %>'">
                    <h2 class="text-2xl font-semibold mb-2"><%= capsule.capsuleName %></h2>
                    <p class="text-gray-600" id="countdown-<%= index %>">Unlocked</p>
                </div>
            <% }); %>
        </div>

        <h2 class="text-3xl font-semibold mb-4">Locked Capsules</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% lockedCapsules.forEach(function(capsule, index) { %>
                <div class="bg-white rounded-lg shadow-md p-6 cursor-pointer transform transition duration-300 hover:scale-105">
                    <h2 class="text-2xl font-semibold mb-2"><%= capsule.capsuleName %></h2>
                    <p class="text-gray-600" id="countdown-locked-<%= index %>">Loading...</p>
                    <script>
                        startCountdown('<%= capsule.unlockDate %>', 'countdown-locked-<%= index %>');
                    </script>
                </div>
            <% }); %>
        </div>

        <h2 class="text-3xl font-semibold mb-4">Shared Capsules</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% user.sharedCapsules.forEach(function(capsule, index) { %>
                <div class="bg-white rounded-lg shadow-md p-6 cursor-pointer transform transition duration-300 hover:scale-105" onclick="location.href='/capsule/<%= capsule.id %>'">
                    <h2 class="text-2xl font-semibold mb-2"><%= capsule.capsuleName %></h2>
                    <p class="text-gray-600" id="countdown-shared-<%= index %>">Unlocked</p>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
