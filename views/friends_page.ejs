<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Friends Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-200 text-white min-h-screen flex flex-col items-center justify-center px-4">

    <!-- Logo -->
    <a href="/dashboard" class="mb-6">
        <img src="/images/background1.png" alt="Virtual Time Capsule" class="w-10 h-10 transition-transform duration-300 hover:scale-110 hover:rotate-6">
    </a>

    <!-- Main Container -->
    <div class="bg-gradient-to-br from-pink-300 to-purple-500 w-full max-w-lg rounded-xl shadow-lg p-6 flex flex-col items-center">

        <!-- Heading -->
        <h1 class="text-3xl font-bold text-center mb-6 text-black">Your Friends (<%= username %>)</h1>

        <!-- Send Friend Request -->
        <div class="bg-white bg-opacity-20 p-6 rounded-xl shadow-md w-full hover:shadow-xl transition bg-gradient-to-br from-pink-500 to-purple-700">
            <h3 class="text-lg font-semibold text-center mb-4">Send Friend Request</h3>
            <form action="/friends/request" method="POST" class="flex space-x-2">
                <input type="email" name="friendEmail" class="flex-1 p-2 rounded-lg text-black outline-none border border-white bg-white" placeholder="Enter friend's email" required>
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition transform hover:scale-105">Send</button>
            </form>
        </div>

        <!-- Friends List -->
        <div class="bg-white bg-opacity-20 p-6 rounded-xl shadow-md w-full mt-6 hover:shadow-xl transition bg-gradient-to-br from-pink-500 to-purple-700">
            <h3 class="text-lg font-semibold text-center mb-4">Your Friends</h3>
            <ul>
                <% if (friends.length > 0) { %>
                    <% friends.forEach(function(friend) { %>
                        <li class="bg-white border border-white text-black p-3 rounded-lg flex justify-between items-center mb-2 hover:scale-105 transition transform">
                            <a href="/message/<%= friend.googleId %>" class="flex-1 text-black hover:text-blue-400 transition">
                                <%= friend.name %> 
                            </a>
                            <form action="/friends/remove" method="POST">
                                <input type="hidden" name="friendId" value="<%= friend._id %>">
                                <button type="submit" class="bg-red-400 hover:bg-red-600 text-white px-3 py-1 rounded-md transition">Remove</button>
                            </form>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li class="text-center text-white p-2">You have no friends added yet.</li>
                <% } %>
            </ul>
        </div>

        <!-- Pending Requests -->
        <div class="bg-white bg-opacity-20 p-6 rounded-xl shadow-md w-full mt-6 hover:shadow-xl transition bg-gradient-to-br from-pink-500 to-purple-700">
            <h3 class="text-lg font-semibold text-center mb-4">Pending Requests</h3>
            <ul>
                <% if (pendingRequests.length > 0) { %>
                    <% pendingRequests.forEach(function(request) { %>
                        <li class="bg-transparent border border-white text-white p-3 rounded-lg flex justify-between items-center mb-2 hover:scale-105 transition">
                            <%= request.email %>
                            <div class="flex space-x-2">
                                <form action="/friends/accept" method="POST">
                                    <input type="hidden" name="friendId" value="<%= request._id %>">
                                    <button type="submit" class="bg-green-500 hover:bg-green-700 text-white px-3 py-1 rounded-md transition">Accept</button>
                                </form>
                                <form action="/friends/reject" method="POST">
                                    <input type="hidden" name="friendId" value="<%= request._id %>">
                                    <button type="submit" class="bg-red-500 hover:bg-red-700 text-white px-3 py-1 rounded-md transition">Reject</button>
                                </form>
                            </div>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li class="text-center text-white p-2">No pending requests.</li>
                <% } %>
            </ul>
        </div>

    </div>

</body>
</html>
