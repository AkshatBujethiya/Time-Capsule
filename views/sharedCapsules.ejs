<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shared Capsules</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .glass {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
    </style>
    <script>
        function startCountdown(unlockDate, lockDate, elementId) {
            const countDownDate = new Date(unlockDate).getTime();
            const lockDateTime = new Date(lockDate).getTime();
            const countdownElement = document.getElementById(elementId);

            const updateCountdown = setInterval(function() {
                const now = new Date().getTime();
                const distance = countDownDate - now;
                const lockDistance = lockDateTime - now;

                if (lockDistance > 0) {
                    countdownElement.innerHTML = "ğŸ”’ Locked until " + new Date(lockDate).toLocaleString();
                    return;
                }

                if (distance < 0) {
                    clearInterval(updateCountdown);
                    countdownElement.innerHTML = "âœ… Unlocked!";
                    countdownElement.classList.add("text-green-500");
                    return;
                }

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                countdownElement.innerHTML = `${days}d ${hours}h ${minutes}m ${seconds}s`;
            }, 1000);
        }
    </script>
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .fade-in {
            animation: fadeIn 1s ease-in-out;
        }
        .glow-hover:hover {
            box-shadow: 0px 0px 15px rgba(0, 255, 255, 0.8);
            transform: scale(1.05);
        }
        .animated-bg {
            background: linear-gradient(-45deg, #243a47, #ad3370, #6c3840);
            background-size: 400% 400%;
            animation: bgMove 10s ease infinite;
        }
    </style>
</head>
<body class="bg-gray-100 h-screen flex">

    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg h-full p-6 glass">
        <div class="text-xl font-bold text-blue-900 flex items-center space-x-2">
            <img src="/images/background1.png" alt="Virtual Time Capsule" class="w-6 h-6 object-contain">
            <span>Time Capsule</span>
        </div>
        <nav class="mt-6 space-y-4">
            <a href="/dashboard" class="flex items-center space-x-2 text-black font-semibold p-3 rounded-lg bg-gray-300 hover:bg-blue-300 space-x-2 transform transition-all hover:scale-110">
                <span>ğŸ </span>
                <span>Home</span>
            </a>
            <a href="/myaccount" class="flex items-center space-x-2 text-gray-600 p-3 rounded-lg hover:bg-blue-300 space-x-2 transform transition-all hover:scale-110">
                <span>ğŸ‘¤</span>
                <span>Account</span>
            </a>
            <a href="/capsules" class="flex items-center space-x-2 text-gray-600 p-3 rounded-lg hover:bg-blue-300 space-x-2 transform transition-all hover:scale-110">
                <span>ğŸ’¼</span>
                <span>My Capsules</span>
            </a>
            <a href="/sharedcapsule" class="flex items-center space-x-2 text-gray-600 p-3 rounded-lg hover:bg-blue-300 space-x-2 transform transition-all hover:scale-110">
                <span>ğŸ“¤</span>
                <span>Shared Capsules</span>
            </a>
            <a href="/friends" class="flex items-center space-x-2 text-gray-600 p-3 rounded-lg hover:bg-blue-300 space-x-2 transform transition-all hover:scale-110">
                <span>ğŸ‘¥</span>
                <span>Friends</span>
            </a>
            <a href="/logout" class="flex items-center space-x-2 text-gray-600 p-3 rounded-lg hover:bg-red-300 space-x-2 transform transition-all hover:scale-110">
                <span>ğŸšª</span>
                <span>Logout</span>
            </a>
        </nav>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 p-4">
        <div class="container mx-auto">
            <h1 class="text-4xl font-bold text-center mb-8">Shared Capsules</h1>
            
            <h2 class="text-3xl font-semibold mb-4">Shared Capsules</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mb-8">
                <% sharedCapsules.forEach(function(capsule, index) { %>
                    <div class="bg-white rounded-lg shadow-md p-6 cursor-pointer transform transition duration-300 hover:scale-105" onclick="location.href='/capsule/<%= capsule.sharedBy %>/<%= capsule.capsuleId %>'">
                        <h2 class="text-2xl font-semibold mb-2"><%= capsule.capsuleName %></h2>
                        <p class="text-gray-600 mb-2">Shared by: <%= capsule.sharedBy %></p>
                        <p class="text-gray-600" id="countdown-shared-<%= index %>">Loading...</p>
                        <script>
                            startCountdown('<%= capsule.unlockDate %>', '<%= capsule.lockDate %>', 'countdown-shared-<%= index %>');
                        </script>
                    </div>
                <% }); %>
            </div>

        <!-- Communal Capsules Container -->
        <div class="w-full lg:w-1/2 bg-white bg-opacity-20 backdrop-blur-md shadow-lg rounded-lg p-8 border-1 border-blue-400 fade-in">
                <h2 class="text-3xl font-semibold text-white mb-4 text-center">ğŸ¤ Community Capsules</h2>
                <div class="space-y-4">
                    <% communalCapsules.forEach(function(capsule, index) { %>
                        <div class="bg-white rounded-lg shadow-md p-4 transition transform glow-hover cursor-pointer"
                         onclick="location.href='/capsule/<%= capsule._id %>'">
                            <h2 class="text-1xl font-semibold mb-2"><%= capsule.capsuleName %></h2>
                            <p class="text-red-500 font-bold" id="countdown-communal-<%= index %>">Loading...</p>
                            <script>
                                startCountdown('<%= capsule.unlockDate %>', '<%= capsule.lockDate %>', 'countdown-communal-<%= index %>');
                            </script>
                        </div>
                    <% }); %>
            </div>
            </div>
        </div>
    </div>
</body>
</html>
